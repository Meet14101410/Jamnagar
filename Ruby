# Represents a landmark or point of interest
class Landmark
  attr_reader :name, :type, :description

  def initialize(name, type, description)
    @name = name
    @type = type
    @description = description
  end

  def to_s
    "Name: #{name}, Type: #{type}, Description: #{description}"
  end
end

# Represents the city of Jamnagar
class JamnagarInfo
  def initialize
    @facts = {
      "Location" => "Gujarat, India",
      "Population" => "Approx. 600,000 (2023)",
      "Known For" => "Brass parts industry, oil refineries, and palaces"
    }
    @landmarks = []
    
    add_landmark("Lakhota Lake & Palace", "Historical Place", "A beautiful lake with a palace in the center, a museum today.")
    add_landmark("Dwarkadhish Temple", "Religious Site", "A major Hindu pilgrimage site and a Char Dham pilgrimage.")
    add_landmark("Khijadiya Bird Sanctuary", "Nature Reserve", "A sanctuary for migratory birds and local avian species.")
  end

  def add_landmark(name, type, description)
    @landmarks << Landmark.new(name, type, description)
  end

  def get_fact(name)
    @facts[name]
  end

  def search_landmarks_by_type(type)
    @landmarks.select { |l| l.type == type }
  end
end

# Main script logic
jamnagar = JamnagarInfo.new
puts "Population: #{jamnagar.get_fact('Population')}"

puts "\nSearching for historical places:"
jamnagar.search_landmarks_by_type("Historical Place").each { |l| puts l }

puts "\nSearching for religious sites:"
jamnagar.search_landmarks_by_type("Religious Site").each { |l| puts l }
